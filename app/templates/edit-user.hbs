<div class="col-xs-12 col-sm-9 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >
	<div class="panel panel-info">
		<div class="panel-heading">
			<label {{action "editUser" model on="doubleClick"}}>
				<h3 class="panel-title">Edit {{name}} Details</h3>
			</label>
		</div>
		<div class="panel-body">
			<div class="row">
				<div class="col-md-3 col-lg-3 " align="center">
        				{{#if profileImage}}
						<img alt="User Pic" {{bind-attr src=profileImage}} class="img-circle" height="100" width="100">
        				{{else}}
	        				<img alt="User Pic" {{bind-attr src=defaultImage}} class="img-circle" height="100" width="100">
        				{{/if}}
				</div>
				<div class=" col-md-9 col-lg-9 ">
					<table class="table table-user-information">
						<tbody>
							<tr>
								<td>
									Name:
								</td>
								<td>
                							{{input type="text" class= "form-control danger" value=name }}
              							</td>
							</tr>
			      				<tr>
				      				<td>
									Age:
								</td>
				      				<td>
                							{{input type="text" class= "form-control" value=age }}
              							</td>
			      				</tr>
							<tr>
								<td>
									Github URL
								</td>
								<td>
                							{{input type="text" class= "form-control" value=githubURL }}
								</td>
							</tr>
							<tr>
								<td>
									Phone No
								</td>
								<td>{{input type="text" class= "form-control" value=phoneNo }}</td>
							</tr>
						</tbody>
					</table>
          				{{#bs-button type="primary" clicked="done"}}
	          				Done
          				{{/bs-button}}
				</div>
			</div>
		</div>
	</div>
</div>

{{#if isEditing}}
	{{render "edit-user" model}}
{{else}}
	<div class="col-xs-12 col-sm-9 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >
	  	<div class="panel panel-info">
			<div class="panel-heading">
            			<h3 class="panel-title">
					personal info - {{model.name}}
            			</h3>
		  	</div>
	    		<div class="panel-body">
		    		<div class="row">
			    		<div class="col-md-3 col-lg-3" align="center" {{action "editUser" on="doubleClick"}}>
                  {{#if model.profileImage}}
                      <img alt="User Pic" {{bind-attr src=model.profileImage}} class="img-circle" height="100" width="100">
                  {{else}}
	                    <img alt="User Pic" {{bind-attr src=defaultImage}} class="img-circle" height="100" width="100">
                  {{/if}}
          				</div>
          				<div class=" col-md-9 col-lg-9 ">
            					<table class="table table-user-information">
              						<tbody>
		                      				<tr>
			                      				<td>
										Name:
									</td>
                            						<td>
	                            						<a target="" {{action "editUser" model on="doubleClick"}}>
                                							{{model.name}}
                              							</a>
                            						</td>
		                      				</tr>
                						<tr>
                  							<td>
										Age:
									</td>
                  							<td>
										{{model.age}}
									</td>
                						</tr>
                						<tr>
                  							<td>
										Github URL
									</td>
                  							<td>
                      								<a target="" href="{{unbound model.githubURL}}">
											{{model.githubURL}}
										</a>
                  							</td>
                						</tr>
                						<tr>
                  							<td>
										Phone No
									</td>
                  							<td>
										{{model.phoneNo}}
									</td>
                						</tr>
              						</tbody>
            					</table>
			          		<label>(Edit user profile by doubleclick on name or photo)</label>
          				</div>
        			</div>
              {{#bs-button type="primary" clicked="deActivateUser" clickedParam=model}}
					      De-activate
              {{/bs-button}}
      			</div>
    		</div>
  	</div>
{{/if}}

